<?xml version="1.0" encoding="gb2312"?>
<!-- 指定Hiberante3映射文件的DTD信息 -->
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!--上面四行对所有的hibernate映射文件都相同 -->

<!-- hibernate-mapping是映射文件的根元素 -->
<hibernate-mapping package="com.scuthnweb.domain">
   <class name="Share_link_comment" table="share_link_comment">
      <id name="id" type="int" length="10">
      	<generator class="identity"/>
      </id>   
      <property name="content" type="string">
          <column  name="content" sql-type="text" />
      </property>      
      <property name="add_time" type="java.sql.Timestamp"/>
   
      <many-to-one name="account" class="Account" column="uid"/>
      <many-to-one name="share_link" class="Share_link" column="link_id"/>                     
   </class>     
</hibernate-mapping>